<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <x:Double x:Key="ToastMaxWidth">420</x:Double>
  </Styles.Resources>

  <!-- Shared control templates to keep both desktop shells aligned. -->
  <Style Selector="Button">
    <Setter Property="Height" Value="{StaticResource InputHeightStandard}" />
    <Setter Property="Padding" Value="{StaticResource MarginMedium}" />
    <Setter Property="MinWidth" Value="{StaticResource ButtonMinWidthStandard}" />
    <Setter Property="Background" Value="{StaticResource BrushPrimary}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
    <Setter Property="TextElement.Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushPrimary}" />
    <Setter Property="BorderThickness" Value="{StaticResource BorderThin}" />
    <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{StaticResource BrushSecondary}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushSecondary}" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="DataGrid">
    <Setter Property="Background" Value="{StaticResource BrushSurface}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
    <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BrushGridLines}" />
    <Setter Property="VerticalGridLinesBrush" Value="{StaticResource BrushGridLines}" />
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="RowHeight" Value="{StaticResource RowHeightStandard}" />
    <Setter Property="Margin" Value="{StaticResource MarginMedium}" />
    <Setter Property="GridLinesVisibility" Value="All" />
  </Style>

  <Style Selector="StackPanel.ButtonRow">
    <Setter Property="Orientation" Value="Horizontal" />
    <Setter Property="Spacing" Value="{StaticResource Spacing16}" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <Style Selector="Button.Danger">
    <Setter Property="Background" Value="{StaticResource BrushError}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushError}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="TextElement.Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="Button.Danger:pointerover">
    <Setter Property="Background" Value="{StaticResource BrushError}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushError}" />
    <Setter Property="Opacity" Value="0.9" />
  </Style>

  <Style Selector="DataGridCell">
    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    <Setter Property="Padding" Value="{StaticResource SpaceThickness12}" />
  </Style>

  <Style Selector="Border.ToastControl">
    <Setter Property="Background" Value="{StaticResource BrushSecondary}" />
    <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}" />
    <Setter Property="Padding" Value="{StaticResource MarginMedium}" />
    <Setter Property="Margin" Value="{StaticResource MarginSmall}" />
    <Setter Property="HorizontalAlignment" Value="Right" />
    <Setter Property="MaxWidth" Value="{StaticResource ToastMaxWidth}" />
    <Setter Property="Opacity" Value="0.95" />
    <Setter Property="BoxShadow" Value="{StaticResource ShadowHigh}" />
  </Style>

  <Style Selector="Border.ModalDialog">
    <Setter Property="Background" Value="{StaticResource BrushSecondary}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
    <Setter Property="BorderThickness" Value="{StaticResource BorderThin}" />
    <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusLarge}" />
    <Setter Property="Padding" Value="{StaticResource MarginLarge}" />
    <Setter Property="BoxShadow" Value="{StaticResource ShadowHigh}" />
  </Style>
</Styles>
