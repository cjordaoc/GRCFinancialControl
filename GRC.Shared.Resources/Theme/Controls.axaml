<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <x:Double x:Key="ToastMaxWidth">420</x:Double>
  </Styles.Resources>

  <!-- Shared control templates to keep both desktop shells aligned. -->
  <Style Selector="Button">
    <Setter Property="MinHeight" Value="{StaticResource ButtonMinHeight}" />
    <Setter Property="Padding" Value="{StaticResource ControlPaddingStandard}" />
    <Setter Property="MinWidth" Value="{StaticResource ButtonMinWidth}" />
    <Setter Property="Background" Value="{StaticResource BrushPrimary}" />
    <Setter Property="Foreground" Value="{StaticResource BrushSecondary}" />
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeButton}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushPrimary}" />
    <Setter Property="BorderThickness" Value="{StaticResource ControlBorderThickness}" />
    <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{StaticResource BrushSecondary}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushSecondary}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="DataGrid">
    <Setter Property="Background" Value="{StaticResource BrushSurface}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
    <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BrushGridLines}" />
    <Setter Property="VerticalGridLinesBrush" Value="{StaticResource BrushGridLines}" />
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="RowHeight" Value="{StaticResource DataGridRowHeight}" />
    <Setter Property="ColumnHeaderHeight" Value="{StaticResource DataGridHeaderHeight}" />
    <Setter Property="GridLinesVisibility" Value="Horizontal" />
    <Setter Property="BorderThickness" Value="{StaticResource ControlBorderThickness}" />
  </Style>

  <Style Selector="StackPanel.ButtonRow">
    <Setter Property="Orientation" Value="Horizontal" />
    <Setter Property="Spacing" Value="{DynamicResource ControlSpacing}" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <Style Selector="Button.Danger">
    <Setter Property="Background" Value="{StaticResource BrushError}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushError}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="Button.Danger:pointerover">
    <Setter Property="Background" Value="{StaticResource BrushError}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushError}" />
    <Setter Property="Opacity" Value="0.9" />
  </Style>

  <Style Selector="DataGridCell">
    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Padding" Value="{StaticResource DataGridCellPadding}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
  </Style>

  <Style Selector="DataGridColumnHeader">
    <Setter Property="Background" Value="{StaticResource BrushSurfaceVariant}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSection}" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="Padding" Value="{StaticResource DataGridHeaderPadding}" />
  </Style>

  <Style Selector="Border.ToastControl">
    <Setter Property="Background" Value="{StaticResource BrushSecondary}" />
    <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
    <Setter Property="Padding" Value="{DynamicResource CardPaddingThickness}" />
    <Setter Property="Margin" Value="{DynamicResource PageMarginThickness}" />
    <Setter Property="HorizontalAlignment" Value="Right" />
    <Setter Property="MaxWidth" Value="{StaticResource ToastMaxWidth}" />
    <Setter Property="Opacity" Value="0.95" />
    <Setter Property="BoxShadow" Value="{StaticResource ShadowHigh}" />
  </Style>

  <Style Selector="Border.ModalDialog">
    <Setter Property="Background" Value="{StaticResource BrushSecondary}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
    <Setter Property="BorderThickness" Value="{StaticResource ControlBorderThickness}" />
    <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
    <Setter Property="Padding" Value="{DynamicResource CardPaddingThickness}" />
    <Setter Property="BoxShadow" Value="{StaticResource ShadowHigh}" />
  </Style>
</Styles>
