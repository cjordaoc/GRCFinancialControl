<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GRCFinancialControl.Avalonia.App"
             xmlns:local="using:GRCFinancialControl.Avalonia"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:sharedConverters="clr-namespace:App.Presentation.Converters;assembly=App.Presentation"
             RequestedThemeVariant="Dark">
             <!-- The app defaults to the dark variant for consistency with analytics dashboards. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://GRC.Shared.Resources/Theme/Colors.axaml" />
                <ResourceInclude Source="avares://GRC.Shared.Resources/Theme/Spacing.axaml" />
                <ResourceInclude Source="avares://GRC.Shared.Resources/Theme/Dimensions.axaml" />
                <ResourceInclude Source="avares://GRC.Shared.Resources/Theme/Shapes.axaml" />
                <ResourceInclude Source="avares://GRC.Shared.Resources/Theme/Elevation.axaml" />
                <ResourceInclude Source="avares://GRC.Shared.Resources/Theme/Effects.axaml" />
                <ResourceInclude Source="avares://GRC.Shared.Resources/Theme/Typography.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <sharedConverters:DateTimeOffsetToDateTimeConverter x:Key="DateTimeOffsetToDateTimeConverter" />
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme/>
        <StyleInclude Source="avares://App.Presentation/Styles/Styles.xaml"/>
    </Application.Styles>
</Application>
