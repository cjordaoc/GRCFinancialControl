<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:models="using:GRCFinancialControl.Core.Models"
             xmlns:conv="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:appConv="clr-namespace:App.Presentation.Converters;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.RevenueAllocationsView"
             x:Name="RevenueAllocationsViewRoot"
             x:DataType="vm:RevenueAllocationsViewModel">
    <UserControl.Resources>
        <conv:BooleanToBrushConverter x:Key="AllocationFillBrush"
                                      TrueBrush="{StaticResource BrushWarningHighlight}"
                                      FalseBrush="{StaticResource BrushSuccess}"/>
        <conv:BooleanToBrushConverter x:Key="AllocationStrokeBrush"
                                      TrueBrush="{StaticResource BrushWarning}"
                                      FalseBrush="{StaticResource BrushSuccessDark}"/>
        <appConv:CurrencyDisplayConverter x:Key="CurrencyDisplayConverter"/>
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,*">
        <TextBlock Text="{Binding Header}"
                   Classes="TitleMedium"
                   Margin="{StaticResource LayoutPaddingStandard}"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Engagements}" AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Engagement ID" Binding="{Binding EngagementId}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Currency" Binding="{Binding Currency}" Width="Auto"/>
                <DataGridTemplateColumn Header="Value to Allocate" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource CurrencyDisplayConverter}">
                                        <Binding Path="ValueToAllocate"/>
                                        <Binding Path="Currency"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Current Value Allocation" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource CurrencyDisplayConverter}">
                                        <Binding Path="CurrentRevenueAllocation"/>
                                        <Binding Path="Currency"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Review" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:Engagement">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="{StaticResource SpacingUnit}">
                                <Ellipse Width="12" Height="12" StrokeThickness="1" ToolTip.Tip="{Binding RevenueAllocationVariance, StringFormat='Variance {0:+0.##;-0.##;0}'}"
                                         Fill="{Binding RequiresRevenueAllocationReview, Converter={StaticResource AllocationFillBrush}}"
                                         Stroke="{Binding RequiresRevenueAllocationReview, Converter={StaticResource AllocationStrokeBrush}}"/>
                                <TextBlock Text="{Binding RevenueAllocationVariance, StringFormat='{}{0:+0.##;-0.##;0}'}"
                                           Foreground="{StaticResource BrushWarning}"
                                           IsVisible="{Binding RequiresRevenueAllocationReview}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:Engagement">
                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingUnit}">
                                <Button Content="View"
                                        Command="{Binding DataContext.ViewAllocationCommand, ElementName=RevenueAllocationsViewRoot}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="Edit"
                                        Command="{Binding DataContext.EditAllocationCommand, ElementName=RevenueAllocationsViewRoot}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
