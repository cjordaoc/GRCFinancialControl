<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
             x:Class="GRCFinancialControl.Avalonia.Views.EngagementPapdAssignmentView"
             x:DataType="vm:EngagementPapdAssignmentViewModel">
    <Panel>
        <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8"/>

        <StackPanel Spacing="10" Margin="20">
            <TextBlock Text="PAPD Assignments" FontSize="18" FontWeight="Bold"/>

            <DataGrid ItemsSource="{Binding Assignments}"
                      SelectedItem="{Binding SelectedAssignment}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PAPD" Binding="{Binding Papd.Name}" Width="*"/>
                    <DataGridTextColumn Header="Effective Date" Binding="{Binding EffectiveDate, StringFormat='yyyy-MM-dd'}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Remove Selected Assignment"
                    Command="{Binding RemoveAssignmentCommand}"
                    HorizontalAlignment="Right"/>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
                <ComboBox ItemsSource="{Binding AvailablePapds}"
                          SelectedItem="{Binding SelectedPapd}"
                          DisplayMemberBinding="{Binding Name}"
                          Width="200"/>
                <DatePicker SelectedDate="{Binding EffectiveDateOffset}" />
                <Button Content="Add" Command="{Binding AddAssignmentCommand}" Classes="accent"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="Done" Command="{Binding ConfirmCommand}" Classes="accent"/>
                <Button Content="Cancel" Command="{Binding CloseCommand}"/>
            </StackPanel>
        </StackPanel>
    </Panel>
</UserControl>