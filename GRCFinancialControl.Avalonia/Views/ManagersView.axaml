<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.ManagersView"
             x:DataType="vm:ManagersViewModel">
    <Grid RowDefinitions="Auto,*,Auto" Margin="{StaticResource SpaceThickness10}">
        <TextBlock Text="Managers" Classes="TitleLarge" Margin="{StaticResource MarginBottomSmall}"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Managers}"
                  SelectedItem="{Binding SelectedManager}"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="*"/>
                <DataGridTextColumn Header="Windows Login" Binding="{Binding WindowsLogin}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="{StaticResource Spacing4}" Margin="{StaticResource MarginTopSmall}">
            <Button Content="Add" Command="{Binding AddCommand}"/>
            <Button Content="Edit" Command="{Binding EditCommand}" CommandParameter="{Binding SelectedManager}"/>
            <Button Content="View" Command="{Binding ViewCommand}" CommandParameter="{Binding SelectedManager}"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedManager}" Classes="danger"/>
        </StackPanel>
    </Grid>
</UserControl>
