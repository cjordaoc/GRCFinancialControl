<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.FiscalPerformanceView"
             x:DataType="vm:FiscalPerformanceViewModel">
    <Grid RowDefinitions="Auto,*,*" ColumnDefinitions="*,*">
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Fiscal Performance Dashboard" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <Border Grid.Row="1" Grid.Column="0" Classes="card">
            <StackPanel>
                <TextBlock Text="Progress vs Target (Sales)" Classes="h2"/>
                <lvc:CartesianChart Series="{Binding SalesSeries}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Classes="card">
            <StackPanel>
                <TextBlock Text="Progress vs Target (Revenue)" Classes="h2"/>
                <lvc:CartesianChart Series="{Binding RevenueSeries}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Classes="card">
            <StackPanel>
                <TextBlock Text="Contribution by PAPD" Classes="h2"/>
                <lvc:PieChart Series="{Binding PapdContributionSeries}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" Classes="card">
            <StackPanel>
                <TextBlock Text="Planned vs ETC-P Hours (Cumulative)" Classes="h2"/>
                <lvc:CartesianChart Series="{Binding PlannedVsActualHoursSeries}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>