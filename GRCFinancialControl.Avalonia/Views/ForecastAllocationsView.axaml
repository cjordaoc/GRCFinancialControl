<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:models="using:GRCFinancialControl.Core.Models"
             xmlns:conv="using:GRCFinancialControl.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
             x:Class="GRCFinancialControl.Avalonia.Views.ForecastAllocationsView"
             x:DataType="vm:ForecastAllocationsViewModel">
    <UserControl.Resources>
        <conv:ForecastStatusToBrushConverter x:Key="ForecastStatusBrush" />
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Margin="{StaticResource SpaceThickness10}">
        <TextBlock Text="Alocação (Forecast)"
                   Classes="TitleLarge"
                   Margin="0,0,0,8" />
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="{StaticResource Space8}">
            <Button Content="Atualizar"
                    Command="{Binding RefreshCommand}" />
            <Button Content="Gerar Template Retain"
                    Command="{Binding GenerateTemplateRetainCommand}" />
            <Button Content="Gerar JSON Power Automate"
                    Command="{Binding GeneratePowerAutomateJsonCommand}" />
            <Button Content="Exportar Pendências"
                    Command="{Binding ExportPendingCommand}" />
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Spacing="{StaticResource Space8}"
                    Margin="0,8,0,8">
            <TextBlock Text="{Binding Rows.Count, StringFormat='Total de linhas: {0}'}" />
            <ProgressBar Width="160"
                         IsIndeterminate="True"
                         IsVisible="{Binding IsBusy}" />
        </StackPanel>
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="True"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Engagement"
                                     Binding="{Binding EngagementCode}"
                                     Width="1.2*" />
                <DataGridTextColumn Header="Descrição"
                                     Binding="{Binding EngagementName}"
                                     Width="2*" />
                <DataGridTextColumn Header="Fiscal Year"
                                     Binding="{Binding FiscalYearName}"
                                     Width="1*" />
                <DataGridTextColumn Header="Rank"
                                     Binding="{Binding Rank}"
                                     Width="0.8*" />
                <DataGridTextColumn Header="Budget (h)"
                                     Binding="{Binding BudgetHours, StringFormat='{}{0:N2}'}"
                                     Width="1*" />
                <DataGridTextColumn Header="Actuals (h)"
                                     Binding="{Binding ActualsHours, StringFormat='{}{0:N2}'}"
                                     Width="1*" />
                <DataGridTextColumn Header="Forecast (h)"
                                     Binding="{Binding ForecastHours, StringFormat='{}{0:N2}'}"
                                     Width="1*" />
                <DataGridTextColumn Header="Disponível (h)"
                                     Binding="{Binding AvailableHours, StringFormat='{}{0:N2}'}"
                                     Width="1*" />
                <DataGridTextColumn Header="Disponível p/ Real (h)"
                                     Binding="{Binding AvailableToActuals, StringFormat='{}{0:N2}'}"
                                     Width="1*" />
                <DataGridTemplateColumn Header="Risco / Estouro"
                                       Width="0.8*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:ForecastAllocationRow">
                            <TextBlock Text="{Binding Status}"
                                       HorizontalAlignment="Center"
                                       Foreground="{Binding Status, Converter={StaticResource ForecastStatusBrush}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
