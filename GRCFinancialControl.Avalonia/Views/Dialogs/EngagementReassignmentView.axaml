<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
             x:Class="GRCFinancialControl.Avalonia.Views.Dialogs.EngagementReassignmentView"
             x:DataType="vm:EngagementReassignmentViewModel">
    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
            CornerRadius="8"
            Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Reassign Engagement" FontSize="18" FontWeight="Bold"/>

            <StackPanel Orientation="Vertical" Spacing="5">
                <TextBlock Text="Engagement"/>
                <ComboBox ItemsSource="{Binding Engagements}"
                          SelectedItem="{Binding SelectedEngagement}"
                          DisplayMemberBinding="{Binding EngagementId}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Spacing="5">
                <TextBlock Text="Customer"/>
                <ComboBox ItemsSource="{Binding Customers}"
                          SelectedItem="{Binding SelectedCustomer}"
                          DisplayMemberBinding="{Binding Name}"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" Foreground="Red"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="Reassign" Command="{Binding ReassignCommand}" Classes="accent"/>
                <Button Content="Close" Command="{Binding CloseCommand}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
