<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels.Dialogs"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
             x:Class="GRCFinancialControl.Avalonia.Views.Dialogs.ManagerSelectionView"
             x:DataType="vm:ManagerSelectionViewModel">
    <Grid RowDefinitions="*,Auto" RowSpacing="{StaticResource GridGap}" Margin="{StaticResource CardPaddingThickness}">
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="{StaticResource SectionSpacing}">
                <TextBlock Text="{Binding Title}" Classes="TitleSmall"/>
                
                <DataGrid ItemsSource="{Binding AvailableManagers}"
                          SelectionMode="Extended"
                          IsReadOnly="False"
                          AutoGenerateColumns="False"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Selected" Binding="{Binding IsSelected}" Width="Auto"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Manager.Name}" Width="2*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Manager.Email}" Width="2*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Position" Binding="{Binding Manager.Position}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Windows Login" Binding="{Binding Manager.WindowsLogin}" Width="*" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="{StaticResource ControlSpacing}">
            <Button Content="{loc:Loc Key=Global_Button_Save}"
                    Command="{Binding SaveCommand}"
                    IsDefault="True"
                    MinWidth="{StaticResource ButtonMinWidth}" />
            <Button Content="{loc:Loc Key=Global_Button_Cancel}"
                    Command="{Binding CloseCommand}"
                    IsCancel="True"
                    MinWidth="{StaticResource ButtonMinWidth}" />
        </StackPanel>
    </Grid>
</UserControl>

