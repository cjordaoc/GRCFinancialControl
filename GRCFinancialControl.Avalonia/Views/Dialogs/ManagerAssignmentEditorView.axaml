<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="GRCFinancialControl.Avalonia.Views.Dialogs.ManagerAssignmentEditorView"
             x:DataType="vm:ManagerAssignmentEditorViewModel">
    <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold"/>

        <StackPanel Spacing="4">
            <TextBlock Text="Engagement"/>
            <ComboBox ItemsSource="{Binding Engagements}"
                      SelectedItem="{Binding SelectedEngagement}"
                      Width="280"
                      IsEnabled="{Binding AllowEditing}"/>
        </StackPanel>

        <StackPanel Spacing="4">
            <TextBlock Text="Manager"/>
            <ComboBox ItemsSource="{Binding Managers}"
                      SelectedItem="{Binding SelectedManager}"
                      Width="280"
                      IsEnabled="{Binding AllowEditing}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <StackPanel Width="160" Spacing="4">
                <TextBlock Text="Begin"/>
                <DatePicker SelectedDate="{Binding BeginDateOffset}" IsEnabled="{Binding AllowEditing}"/>
            </StackPanel>
            <StackPanel Width="160" Spacing="4">
                <TextBlock Text="End"/>
                <DatePicker SelectedDate="{Binding EndDateOffset}" IsEnabled="{Binding AllowEditing}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Save" Command="{Binding SaveCommand}" IsEnabled="{Binding AllowEditing}"/>
            <Button Content="Cancel" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
