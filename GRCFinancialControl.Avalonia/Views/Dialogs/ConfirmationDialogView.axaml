<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels.Dialogs"
             x:Class="GRCFinancialControl.Avalonia.Views.Dialogs.ConfirmationDialogView"
             x:DataType="vm:ConfirmationDialogViewModel">
  <Border Padding="{StaticResource DialogContentPadding}"
          Background="{StaticResource BrushSurfaceMuted}"
          CornerRadius="{StaticResource CornerRadiusMD}">
    <StackPanel Spacing="{StaticResource Space12}">
      <TextBlock Text="{Binding Title}" FontSize="{StaticResource FontSizeLG}" FontWeight="Bold"/>
      <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="{StaticResource Space8}">
        <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        <Button Content="Confirm" Command="{Binding ConfirmCommand}"/>
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
