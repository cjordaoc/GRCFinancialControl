<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels.Dialogs"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             x:Class="GRCFinancialControl.Avalonia.Views.Dialogs.ConfirmationDialogView"
             x:DataType="vm:ConfirmationDialogViewModel">
  <Grid RowDefinitions="*,Auto" RowSpacing="{StaticResource Space24}">
    <Border Padding="{StaticResource SpaceThickness24}"
            Background="{StaticResource BrushSurfaceMuted}"
            CornerRadius="{StaticResource CornerRadiusMD}">
      <StackPanel Spacing="{StaticResource Space16}">
        <TextBlock Text="{Binding Title}" FontSize="{StaticResource FontSizeLG}" FontWeight="Bold"/>
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
      </StackPanel>
    </Border>
    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="{StaticResource Space12}">
      <Button Content="{loc:Loc Key=Common.Button.Save}"
              Command="{Binding SaveCommand}"
              IsDefault="True"
              MinWidth="120" />
      <Button Content="{loc:Loc Key=Common.Button.Cancel}"
              Command="{Binding CloseCommand}"
              IsCancel="True"
              MinWidth="120" />
    </StackPanel>
  </Grid>
</UserControl>
