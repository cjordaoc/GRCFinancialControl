<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels.Dialogs"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             x:Class="GRCFinancialControl.Avalonia.Views.Dialogs.ConfirmationDialogView"
             x:DataType="vm:ConfirmationDialogViewModel">
  <Grid RowDefinitions="*,Auto" RowSpacing="{DynamicResource GridGap}">
    <Border Padding="{DynamicResource CardPaddingThickness}"
            Background="{StaticResource BrushSurfaceMuted}"
            CornerRadius="{StaticResource ControlCornerRadius}">
      <StackPanel Spacing="{DynamicResource SectionSpacing}">
        <TextBlock Text="{Binding Title}" Classes="TitleSmall"/>
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
      </StackPanel>
    </Border>
    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="{DynamicResource ControlSpacing}">
      <Button Content="{loc:Loc Key=Global_Button_Save}"
              Command="{Binding SaveCommand}"
              IsDefault="True"
              MinWidth="{StaticResource InputMinWidthStandard}" />
      <Button Content="{loc:Loc Key=Global_Button_Cancel}"
              Command="{Binding CloseCommand}"
              IsCancel="True"
              MinWidth="{StaticResource InputMinWidthStandard}" />
    </StackPanel>
  </Grid>
</UserControl>
