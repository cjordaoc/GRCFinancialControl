<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.PapdContributionView"
             x:DataType="vm:PapdContributionViewModel">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="PAPD Contribution and Utilization" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <Border Grid.Row="1" Grid.Column="0" Classes="card">
            <StackPanel>
                <TextBlock Text="Revenue Contribution by PAPD" Classes="h2"/>
                <lvc:PieChart Series="{Binding RevenueContributionSeries}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Classes="card">
            <StackPanel>
                <TextBlock Text="Hours Worked by PAPD (Over Time)" Classes="h2"/>
                <lvc:CartesianChart Series="{Binding HoursWorkedSeries}" XAxes="{Binding HoursXAxes}" YAxes="{Binding HoursYAxes}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>