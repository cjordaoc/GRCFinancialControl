<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="GRCFinancialControl.Avalonia.Views.EngagementEditorView"
             x:DataType="vm:EngagementEditorViewModel">
    <StackPanel Spacing="10" Margin="10">
        <TextBlock Text="Engagement Details" FontSize="18" FontWeight="Bold"/>
        <TextBox Text="{Binding EngagementId}" Watermark="Engagement ID"/>
        <TextBox Text="{Binding Description}" Watermark="Description"/>
        <TextBox Text="{Binding CustomerKey}" Watermark="Customer Key"/>
        <TextBox Text="{Binding OpeningMargin}" Watermark="Opening Margin"/>
        <TextBox Text="{Binding OpeningValue}" Watermark="Opening Value"/>
        <TextBox Text="{Binding Status}" Watermark="Status"/>
        <TextBox Text="{Binding TotalPlannedHours}" Watermark="Total Planned Hours"/>

        <TextBlock Text="PAPD Assignments" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
        <DataGrid ItemsSource="{Binding PapdAssignments}" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
            <DataGrid.Columns>
                <DataGridTextColumn Header="PAPD" Binding="{Binding Papd.Name}" Width="*"/>
                <DataGridTextColumn Header="Effective Date" Binding="{Binding EffectiveDate, StringFormat='yyyy-MM-dd'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,5,0,0">
            <Button Content="Add Assignment" Command="{Binding AddAssignmentCommand}"/>
            <Button Content="Remove Assignment" Command="{Binding RemoveAssignmentCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>