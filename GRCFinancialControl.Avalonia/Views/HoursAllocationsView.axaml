<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="GRCFinancialControl.Avalonia.Views.HoursAllocationsView"
             x:Name="HoursAllocationsViewRoot"
             x:DataType="vm:HoursAllocationsViewModel">
    <UserControl.Resources>
        <converters:TrafficLightStatusToBrushConverter x:Key="TrafficLightStatusToBrushConverter" />
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*"
          Margin="{StaticResource SpaceThickness0}">
        <TextBlock Grid.Row="0"
                   Text="{Binding Header}"
                   FontSize="{StaticResource FontSizeXL}"
                   FontWeight="Bold"
                   Margin="{StaticResource SpaceThickness10}"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="{StaticResource Space16}"
                    Margin="{StaticResource SpaceThickness10}">
            <ComboBox Width="280"
                      ItemsSource="{Binding Engagements}"
                      SelectedItem="{Binding SelectedEngagement}"/>
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Spacing="{StaticResource Space12}"
                    Margin="{StaticResource SpaceThickness10}">
            <TextBlock Text="Closing Period"
                       VerticalAlignment="Center"/>
            <ComboBox Width="280"
                      ItemsSource="{Binding ClosingPeriods}"
                      SelectedItem="{Binding SelectedClosingPeriod}"
                      DisplayMemberBinding="{Binding Name}"/>
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Spacing="{StaticResource Space12}"
                    Margin="{StaticResource SpaceThickness10}">
            <ComboBox Width="280"
                      ItemsSource="{Binding AvailableRanks}"
                      SelectedItem="{Binding RankToAdd}"
                      DisplayMemberBinding="{Binding DisplayName}"/>
            <Button Content="Add Resource"
                    Command="{Binding AddResourceCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Spacing="{StaticResource Space24}"
                    Margin="{StaticResource SpaceThickness10}">
            <TextBlock Text="{Binding TotalBudgetHours, StringFormat='Budget Hours: {0:N2} h'}"/>
            <TextBlock Text="{Binding ActualHours, StringFormat='Actual Hours: {0:N2} h'}"/>
            <TextBlock Text="{Binding ToBeConsumedHours, StringFormat='Remaining Hours: {0:N2} h'}"/>
        </StackPanel>

        <TextBlock Grid.Row="5"
                   Text="{Binding StatusMessage}"
                   Foreground="{StaticResource BrushWarning}"
                   FontWeight="SemiBold"
                   Margin="{StaticResource SpaceThickness10}"/>

        <DataGrid x:Name="HoursAllocationsGrid"
                  Grid.Row="6"
                  ItemsSource="{Binding Rows}"
                  SelectedItem="{Binding SelectedRow, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserSortColumns="True"
                  Margin="{StaticResource SpaceThickness10}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TrafficLightSymbol}"
                                       FontSize="{StaticResource FontSizeL}"
                                       HorizontalAlignment="Center"
                                       Foreground="{Binding Status, Converter={StaticResource TrafficLightStatusToBrushConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Rank"
                                    Binding="{Binding RankName}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Budget Hours"
                                    Binding="{Binding TotalBudgetHours, StringFormat='{}{0:N2}'}"
                                    Width="*"/>
                <DataGridTextColumn Header="Consumed Hours"
                                    Binding="{Binding TotalConsumedHours, StringFormat='{}{0:N2}'}"
                                    Width="*"/>
                <DataGridTextColumn Header="Remaining Hours"
                                    Binding="{Binding TotalRemainingHours, StringFormat='{}{0:N2}'}"
                                    Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Spacing="{StaticResource Space6}">
                                <Button Content="Edit"
                                        Command="{Binding DataContext.EditRowCommand, ElementName=HoursAllocationsViewRoot}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
