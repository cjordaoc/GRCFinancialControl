<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:Class="GRCFinancialControl.Avalonia.Views.FiscalYearEditorView"
             x:DataType="vm:FiscalYearEditorViewModel">
    <UserControl.Resources>
        <converters:NumericConverter x:Key="NumericConverter"/>
    </UserControl.Resources>
    <StackPanel Spacing="10" Margin="10">
        <TextBlock Text="{loc:Loc Key=Admin.FiscalYears.Title.Editor}" FontSize="18" FontWeight="Bold"/>
        <TextBox Text="{Binding Name}" Watermark="{loc:Loc Key=Admin.FiscalYears.Placeholder.Name}" IsEnabled="{Binding AllowEditing}"/>
        <DatePicker SelectedDate="{Binding StartDateOffset}" IsEnabled="{Binding AllowEditing}"/>
        <DatePicker SelectedDate="{Binding EndDateOffset}" IsEnabled="{Binding AllowEditing}"/>
        <TextBlock Text="{Binding StatusMessage}" Foreground="Red"/>
        <TextBox Text="{Binding AreaSalesTarget, Converter={StaticResource NumericConverter}}" Watermark="{loc:Loc Key=Admin.FiscalYears.Placeholder.AreaSalesTarget}" IsEnabled="{Binding AllowEditing}"/>
        <TextBox Text="{Binding AreaRevenueTarget, Converter={StaticResource NumericConverter}}" Watermark="{loc:Loc Key=Admin.FiscalYears.Placeholder.AreaRevenueTarget}" IsEnabled="{Binding AllowEditing}"/>
        <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
            <Button Content="{loc:Loc Key=Common.Button.Save}" Command="{Binding SaveCommand}" IsEnabled="{Binding AllowEditing}"/>
            <Button Content="{loc:Loc Key=Common.Button.Close}" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
