<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <StackPanel Spacing="10" Margin="10">
        <TextBlock Text="Data Backend" FontSize="24" FontWeight="Bold"/>
        <StackPanel Spacing="6">
            <ToggleSwitch Content="Use Dataverse backend" IsChecked="{Binding IsDataverseSelected, Mode=TwoWay}"/>
            <TextBlock Text="Restart the application after changing the backend." FontStyle="Italic"/>
        </StackPanel>

        <StackPanel Spacing="6" Margin="0,10,0,0" IsVisible="{Binding IsDataverseSelected}">
            <TextBlock Text="Dataverse Connection Settings" FontSize="20" FontWeight="SemiBold"/>
            <TextBox Text="{Binding DataverseOrgUrl}" Watermark="Organization URL"/>
            <TextBox Text="{Binding DataverseTenantId}" Watermark="Tenant Id"/>
            <TextBox Text="{Binding DataverseClientId}" Watermark="Client Id"/>
            <TextBox Text="{Binding DataverseClientSecret}" Watermark="Client Secret" PasswordChar="*"/>
            <TextBlock Text="Environment variables override these values when present." FontStyle="Italic"/>
        </StackPanel>

        <Separator Margin="0,10,0,0"/>

        <TextBlock Text="MySQL Connection Settings" FontSize="24" FontWeight="Bold"/>
        <TextBox Text="{Binding Server}" Watermark="Server"/>
        <TextBox Text="{Binding Database}" Watermark="Database"/>
        <TextBox Text="{Binding User}" Watermark="User"/>
        <TextBox Text="{Binding Password}" Watermark="Password" PasswordChar="*"/>
        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
            <Button Content="Load Settings" Command="{Binding LoadSettingsCommand}"/>
            <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}"/>
            <Button Content="Test Connection" Command="{Binding TestConnectionCommand}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,20,0,0">
            <Button Content="Clear All Data" Command="{Binding ClearAllDataCommand}" Classes="danger"/>
        </StackPanel>
        <Separator Margin="0,20,0,0"/>
        <TextBlock Text="Power BI Embedding" FontSize="24" FontWeight="Bold"/>
        <TextBlock Text="Provide either a Publish to Web URL or the workspace/report identifiers for app-owned embedding." TextWrapping="Wrap"/>
        <TextBox Text="{Binding PowerBiEmbedUrl}" Watermark="Publish to Web URL"/>
        <TextBox Text="{Binding PowerBiWorkspaceId}" Watermark="Workspace (Group) Id"/>
        <TextBox Text="{Binding PowerBiReportId}" Watermark="Report Id"/>
        <TextBox Text="{Binding PowerBiEmbedToken}" Watermark="Embed Token" PasswordChar="*"/>
        <TextBlock Text="{Binding StatusMessage}" Margin="0,5,0,0"/>
    </StackPanel>
</UserControl>