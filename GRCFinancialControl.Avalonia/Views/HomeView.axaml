<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="640"
             x:Class="GRCFinancialControl.Avalonia.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <UserControl.Resources>
        <converters:BooleanToBrushConverter x:Key="StatusBrushConverter"
                                             TrueBrush="{StaticResource BrushError}"
                                             FalseBrush="{StaticResource BrushSuccess}"/>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="{StaticResource LayoutMarginStandard}" Spacing="{StaticResource SectionSpacing}">
            <TextBlock Text="{loc:Loc Key=FINC_Home_Title}"
                       Classes="TitleLarge"/>
            <TextBlock Text="{loc:Loc Key=FINC_Home_Welcome}"
                       TextWrapping="Wrap"/>
            <StackPanel Spacing="{StaticResource SpacingUnit}">
                <TextBlock Text="{loc:Loc Key=FINC_Home_Label_FiscalYear}"
                           FontWeight="{StaticResource FontWeightSemiBold}"/>
                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="{StaticResource GridSpacing}">
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding FiscalYears}"
                              SelectedItem="{Binding SelectedFiscalYear}"
                              PlaceholderText="{loc:Loc Key=FINC_Home_Placeholder_FiscalYear}"
                              HorizontalAlignment="Stretch"
                              MinWidth="280"
                              IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="{StaticResource FontWeightSemiBold}"/>
                                    <TextBlock>
                                        <TextBlock.Inlines>
                                            <Run Text="{Binding StartDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                            <Run Text=" â€“ "/>
                                            <Run Text="{Binding EndDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                        </TextBlock.Inlines>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Grid.Column="1"
                            Content="{loc:Loc Key=FINC_Home_Button_Confirm}"
                            Command="{Binding ConfirmSelectionCommand}"
                            Classes="accent"
                            MinWidth="{StaticResource InputMinWidthWide}"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                    <ProgressBar Grid.Column="2"
                                 Width="120"
                                 IsIndeterminate="True"
                                 IsVisible="{Binding IsBusy}"/>
                </Grid>
                <TextBlock Text="{loc:Loc Key=FINC_Home_Status_NoFiscalYears}"
                           Foreground="{StaticResource BrushWarning}"
                           IsVisible="{Binding HasFiscalYears, Converter={x:Static converters:ObjectConverters.AreEqual}, ConverterParameter=False}"/>
            </StackPanel>
            <Border Background="{StaticResource BrushSurfaceVariant}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Padding="{StaticResource LayoutPaddingStandard}">
                <StackPanel Spacing="{StaticResource ControlSpacing}">
                    <TextBlock Text="{loc:Loc Key=FINC_Home_Markdown_Title}"
                               Classes="TitleMedium"/>
                    <md:MarkdownScrollViewer Markdown="{Binding ReadmeContent}"
                                             MaxHeight="420"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>
            <StackPanel Spacing="{StaticResource SpacingUnit}">
                <TextBlock Text="{loc:Loc Key=FINC_Home_Label_ClosingPeriod}"
                           FontWeight="{StaticResource FontWeightSemiBold}"/>
                <ComboBox ItemsSource="{Binding ClosingPeriods}"
                          SelectedItem="{Binding SelectedClosingPeriod}"
                          PlaceholderText="{loc:Loc Key=FINC_Home_Placeholder_ClosingPeriod}"
                          Width="320"
                          IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingUnit}">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="{StaticResource FontWeightSemiBold}"/>
                                <TextBlock>
                                    <TextBlock.Inlines>
                                        <Run Text="("/>
                                        <Run Text="{Binding PeriodStart, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding PeriodEnd, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                        <Run Text=")"/>
                                    </TextBlock.Inlines>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="{loc:Loc Key=FINC_Home_Status_NoClosingPeriods}"
                           Foreground="{StaticResource BrushWarning}"
                           IsVisible="{Binding HasClosingPeriods, Converter={x:Static converters:ObjectConverters.AreEqual}, ConverterParameter=False}"/>
            </StackPanel>
            <Border Background="{StaticResource BrushSurfaceVariant}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Padding="{StaticResource LayoutPaddingStandard}"
                    IsVisible="{Binding HasStatusMessage}">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{Binding IsError, Converter={StaticResource StatusBrushConverter}}"
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
