<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
             x:Class="GRCFinancialControl.Avalonia.Views.ManagerEditorView"
             x:DataType="vm:ManagerEditorViewModel">
    <Grid RowDefinitions="*,Auto" Margin="10" RowSpacing="16">
        <StackPanel Spacing="10">
            <TextBlock Text="{loc:Loc Key=Admin.Managers.Title.Editor}" FontSize="18" FontWeight="Bold"/>
            <TextBox Text="{Binding Name}" Watermark="{loc:Loc Key=Admin.Managers.Placeholder.Name}" Width="280" IsEnabled="{Binding AllowEditing}"/>
            <TextBox Text="{Binding Email}" Watermark="{loc:Loc Key=Admin.Managers.Placeholder.Email}" Width="280" IsEnabled="{Binding AllowEditing}"/>
            <TextBox Text="{Binding WindowsLogin}" Watermark="{loc:Loc Key=Admin.Managers.Placeholder.WindowsLogin}" Width="280" IsEnabled="{Binding AllowEditing}"/>
            <ComboBox ItemsSource="{Binding PositionOptions}"
                      SelectedItem="{Binding Position}"
                      PlaceholderText="{loc:Loc Key=Admin.Managers.Placeholder.Position}"
                      Width="280"
                      IsEnabled="{Binding AllowEditing}"/>
        </StackPanel>
        <Border Grid.Row="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="{StaticResource Space12}">
                <Button Content="{loc:Loc Key=Common.Button.Save}"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding AllowEditing}"
                        MinWidth="120" />
                <Button Content="{loc:Loc Key=Common.Button.Cancel}"
                        Command="{Binding CloseCommand}"
                        MinWidth="120" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
