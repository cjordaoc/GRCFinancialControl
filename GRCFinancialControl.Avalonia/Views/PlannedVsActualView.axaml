<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.PlannedVsActualView"
             x:DataType="vm:PlannedVsActualViewModel">
    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <TextBlock Text="Planned vs. Actual Report" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ReportData}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Engagement ID" Binding="{Binding EngagementId}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding EngagementDescription}" Width="2*"/>
                <DataGridTextColumn Header="PAPD" Binding="{Binding PapdName}" Width="*"/>
                <DataGridTextColumn Header="Fiscal Year" Binding="{Binding FiscalYear}" Width="*"/>
                <DataGridTextColumn Header="Planned Hours" Binding="{Binding PlannedHours}" Width="*"/>
                <DataGridTextColumn Header="Actual Hours" Binding="{Binding ActualHours}" Width="*"/>
                <DataGridTextColumn Header="Variance" Binding="{Binding Variance}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Refresh Report" Command="{Binding LoadReportDataCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>