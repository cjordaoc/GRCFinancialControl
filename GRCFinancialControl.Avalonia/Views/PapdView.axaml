<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.PapdView"
             x:DataType="vm:PapdViewModel">
    <Grid RowDefinitions="Auto,*,Auto" Margin="{StaticResource CardPaddingThickness}">
        <TextBlock Text="PAPD Management" Classes="TitleLarge" Margin="{StaticResource MarginBottomSmall}"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Papds}"
                  SelectedItem="{Binding SelectedPapd}"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="*"/>
                <DataGridTextColumn Header="Windows Login" Binding="{Binding WindowsLogin}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Classes="ButtonRow"
                    HorizontalAlignment="Left"
                    Margin="{StaticResource MarginTopSmall}">
            <Button Content="{loc:Loc Key=FINC_Button_Add}" Command="{Binding AddCommand}" MinWidth="{StaticResource ButtonMinWidth}"/>
            <Button Content="{loc:Loc Key=FINC_Button_Edit}" Command="{Binding EditCommand}" CommandParameter="{Binding SelectedPapd}" MinWidth="{StaticResource ButtonMinWidth}"/>
            <Button Content="{loc:Loc Key=FINC_Button_View}" Command="{Binding ViewCommand}" CommandParameter="{Binding SelectedPapd}" MinWidth="{StaticResource ButtonMinWidth}"/>
            <Button Content="{loc:Loc Key=FINC_Button_Delete}" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedPapd}" MinWidth="{StaticResource ButtonMinWidth}"/>
            <Button Content="{loc:Loc Key=FINC_Admin_ClosingPeriods_Button_DeleteData}" Command="{Binding DeleteDataCommand}" CommandParameter="{Binding SelectedPapd}" Classes="Danger" MinWidth="{StaticResource ButtonMinWidth}"/>
            <Button Content="Edit Assignment" Command="{Binding EditAssignmentCommand}" CommandParameter="{Binding SelectedPapd}" MinWidth="{StaticResource ButtonMinWidth}"/>
        </StackPanel>
    </Grid>
</UserControl>