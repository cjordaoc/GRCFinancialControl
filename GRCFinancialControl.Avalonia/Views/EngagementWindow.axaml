<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GRCFinancialControl.Avalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GRCFinancialControl.Avalonia.Views.EngagementWindow"
        Title="Engagement Maintenance">
  <Design.DataContext>
    <vm:EngagementViewModel/>
  </Design.DataContext>
  <Grid ColumnDefinitions="*,2*" RowDefinitions="Auto,*">
    <DataGrid Grid.Row="1" Grid.Column="0" Name="gridEngagements" ItemsSource="{Binding Engagements}" SelectedItem="{Binding SelectedEngagement}" AutoGenerateColumns="True" IsReadOnly="True"/>
    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="10" Margin="10">
      <TextBlock Text="Engagement ID"/>
      <TextBox Text="{Binding EngagementId}" IsReadOnly="{Binding IsEngagementIdReadOnly}"/>
      <TextBlock Text="Engagement Title"/>
      <TextBox Text="{Binding EngagementTitle}"/>
      <TextBlock Text="Engagement Partner"/>
      <TextBox Text="{Binding EngagementPartner}"/>
      <TextBlock Text="Engagement Manager"/>
      <TextBox Text="{Binding EngagementManager}"/>
      <TextBlock Text="Opening Margin"/>
      <TextBox Text="{Binding OpeningMargin, StringFormat='F3'}"/>
      <StackPanel Orientation="Horizontal" Spacing="10" Margin="0 20 0 0">
        <Button Content="New" Command="{Binding NewCommand}"/>
        <Button Content="Save" Command="{Binding SaveCommand}"/>
        <Button Content="Delete" Command="{Binding DeleteCommand}"/>
      </StackPanel>
    </StackPanel>
    <Button Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Content="Close" Click="CloseButton_Click" Margin="10"/>
  </Grid>
</Window>