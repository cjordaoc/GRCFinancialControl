<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
             x:Class="GRCFinancialControl.Avalonia.Views.ClosingPeriodEditorView"
             x:DataType="vm:ClosingPeriodEditorViewModel">
    <Grid RowDefinitions="*,Auto" RowSpacing="{DynamicResource GridGap}">
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="{DynamicResource SectionSpacing}">
                <TextBlock Text="{loc:Loc Key=FINC_Admin_ClosingPeriods_Title_Editor}" Classes="TitleSmall"/>
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="{DynamicResource GridGap}" ColumnSpacing="{DynamicResource GridGap}">
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="{loc:Loc Key=FINC_Admin_ClosingPeriods_Placeholder_Name}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding Name}"
                             Watermark="{loc:Loc Key=FINC_Admin_ClosingPeriods_Placeholder_Name}"
                             IsReadOnly="{Binding IsReadOnlyMode}"/>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="{loc:Loc Key=FINC_Admin_ClosingPeriods_Label_FiscalYear}"
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1"
                              Grid.Column="1"
                              ItemsSource="{Binding FiscalYears}"
                              SelectedItem="{Binding SelectedFiscalYear}"
                              IsEnabled="{Binding AllowEditing}"
                              IsHitTestVisible="{Binding HasFiscalYears}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="{DynamicResource SpacingUnit}">
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{loc:Loc Key=FINC_Admin_ClosingPeriods_Label_Locked}"
                                               Foreground="{StaticResource BrushWarning}"
                                               IsVisible="{Binding IsLocked}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="{loc:Loc Key=FINC_Admin_ClosingPeriods_Header_Start}"
                               VerticalAlignment="Center"/>
                    <CalendarDatePicker Grid.Row="2"
                                        Grid.Column="1"
                                        SelectedDate="{Binding PeriodStart, Converter={StaticResource DateTimeOffsetToDateTimeConverter}}"
                                        IsEnabled="{Binding AllowEditing}"/>

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="{loc:Loc Key=FINC_Admin_ClosingPeriods_Header_End}"
                               VerticalAlignment="Center"/>
                    <CalendarDatePicker Grid.Row="3"
                                        Grid.Column="1"
                                        SelectedDate="{Binding PeriodEnd, Converter={StaticResource DateTimeOffsetToDateTimeConverter}}"
                                        IsEnabled="{Binding AllowEditing}"/>
                </Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="Red"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="{DynamicResource ControlSpacing}">
            <Button Content="{loc:Loc Key=Global_Button_Save}"
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding AllowEditing}"
                    IsDefault="{Binding AllowEditing}"
                    MinWidth="{StaticResource InputMinWidthStandard}" />
            <Button Content="{loc:Loc Key=Global_Button_Cancel}"
                    Command="{Binding CloseCommand}"
                    IsCancel="True"
                    MinWidth="{StaticResource InputMinWidthStandard}" />
        </StackPanel>
    </Grid>
</UserControl>
