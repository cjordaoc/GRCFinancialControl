<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="using:App.Presentation.Localization"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:appConv="clr-namespace:App.Presentation.Converters;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.EngagementsView"
             x:DataType="vm:EngagementsViewModel">
    <UserControl.Resources>
        <appConv:CurrencyDisplayConverter x:Key="CurrencyDisplayConverter"/>
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,*,Auto" Margin="{DynamicResource CardPaddingThickness}">
        <TextBlock Text="{loc:Loc Key=FINC_Admin_Engagements_Title_List}" Classes="TitleLarge" Margin="{DynamicResource MarginBottomRegular}"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Engagements}"
                  SelectedItem="{Binding SelectedEngagement}"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Engagement ID" Binding="{Binding EngagementId}" Width="1.5*"/>
                <DataGridTemplateColumn Header="Description" Width="3*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Description}"
                                       TextWrapping="Wrap"
                                       TextTrimming="None"
                                       MaxWidth="420"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Customer Name" Width="3*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CustomerName}"
                                       TextWrapping="Wrap"
                                       TextTrimming="None"
                                       MinWidth="180"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Opening Value" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource CurrencyDisplayConverter}">
                                        <Binding Path="OpeningValue"/>
                                        <Binding Path="Currency"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="Auto"/>
                <DataGridTextColumn Header="Estimated Hours" Binding="{Binding EstimatedToCompleteHours, StringFormat='{}{0:N2}'}" Width="*"/>
                <DataGridTextColumn Header="Planned Hours" Binding="{Binding InitialHoursBudget, StringFormat='{}{0:N2}'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Classes="ButtonRow"
                    HorizontalAlignment="Left"
                    Margin="{StaticResource MarginTopMedium}">
            <Button Content="Add New" Command="{Binding AddCommand}"/>
            <Button Content="View" Command="{Binding ViewCommand}" CommandParameter="{Binding SelectedEngagement}"/>
            <Button Content="Edit" Command="{Binding EditCommand}" CommandParameter="{Binding SelectedEngagement}"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedEngagement}"/>
            <Button Content="Delete Data" Command="{Binding DeleteDataCommand}" CommandParameter="{Binding SelectedEngagement}" Classes="Danger"/>
        </StackPanel>
    </Grid>
</UserControl>