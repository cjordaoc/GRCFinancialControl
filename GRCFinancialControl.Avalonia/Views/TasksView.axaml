<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.TasksView"
             x:DataType="vm:TasksViewModel">
    <StackPanel Spacing="{StaticResource Spacing16}" Margin="{StaticResource SpaceThickness20}">
        <TextBlock Text="{loc:Loc Key=FINC_Tasks_Title_Primary}" Classes="TitleLarge"/>
        <TextBlock Text="{loc:Loc Key=FINC_Tasks_Description_Primary}" TextWrapping="Wrap"/>
        <Button Content="{loc:Loc Key=FINC_Tasks_Button_Generate}" Command="{Binding GenerateTasksFileCommand}"/>
        <Button Content="{loc:Loc Key=FINC_Tasks_Button_GenerateRetainTemplate}" Command="{Binding GenerateRetainTemplateCommand}"/>
        <TextBlock Text="{Binding StatusMessage}"
                   TextWrapping="Wrap"
                   Margin="{StaticResource MarginTopSmall}"/>
    </StackPanel>
</UserControl>
