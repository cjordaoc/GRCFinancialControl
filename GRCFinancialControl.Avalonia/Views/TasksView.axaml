<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.TasksView"
             x:DataType="vm:TasksViewModel">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="{loc:Loc Key=Tasks.Title.Primary}" FontSize="28" FontWeight="Bold"/>
        <TextBlock Text="{loc:Loc Key=Tasks.Description.Primary}" TextWrapping="Wrap"/>
        <Button Content="{loc:Loc Key=Tasks.Button.Generate}" Command="{Binding GenerateTasksFileCommand}" Width="220"/>
        <Button Content="{loc:Loc Key=Tasks.Button.GenerateRetainTemplate}" Command="{Binding GenerateRetainTemplateCommand}" Width="220"/>
        <TextBlock Text="{Binding StatusMessage}"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
