<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.ReportsView"
             x:DataType="vm:ReportsViewModel">
    <Grid RowDefinitions="Auto,*">
        <ContentControl Grid.Row="0" Content="{Binding Filter}"/>
        <TabControl Grid.Row="1" SelectedItem="{Binding SelectedReport}">
            <TabItem Header="Financial Evolution">
                <ContentControl Content="{Binding FinancialEvolution}"/>
            </TabItem>
            <TabItem Header="PAPD Contribution">
                <ContentControl Content="{Binding PapdContribution}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>