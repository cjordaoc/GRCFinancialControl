<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:conv="using:GRCFinancialControl.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.AllocationEditorView"
             x:Name="AllocationEditorRoot"
             x:DataType="vm:AllocationEditorViewModel">
    <UserControl.Resources>
        <conv:BooleanToBrushConverter x:Key="AllocationFillBrush" TrueBrush="#FFF1C232" FalseBrush="#228B22"/>
        <conv:BooleanToBrushConverter x:Key="AllocationStrokeBrush" TrueBrush="#FFB8860B" FalseBrush="#145214"/>
    </UserControl.Resources>
    <StackPanel Spacing="10" Margin="10">
        <TextBlock Text="{Binding Engagement.Description}" FontSize="20" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <TextBlock Text="{Binding TargetLabel}" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding TargetAmountDisplay}"/>
            <Ellipse Width="14" Height="14" StrokeThickness="1" ToolTip.Tip="{Binding AllocationVarianceTooltip}"
                     Fill="{Binding HasAllocationVariance, Converter={StaticResource AllocationFillBrush}}"
                     Stroke="{Binding HasAllocationVariance, Converter={StaticResource AllocationStrokeBrush}}"/>
            <TextBlock Text="{Binding AllocationVarianceDisplay}" Foreground="#FFB8860B" IsVisible="{Binding HasAllocationVariance}"/>
        </StackPanel>

        <TextBlock>
            <Run Text="{Binding CurrentAllocationLabel}"/>
            <Run Text="{Binding CurrentAllocationDisplay}"/>
        </TextBlock>

        <TextBlock Text="{Binding ValidationMessage}" Foreground="#FFB8860B" FontWeight="SemiBold" IsVisible="{Binding HasAllocationVariance}"/>

        <DataGrid ItemsSource="{Binding Allocations}" AutoGenerateColumns="False" CanUserSortColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fiscal Year" Binding="{Binding FiscalYear.Name}" IsReadOnly="True"/>
                <DataGridTextColumn Header="{Binding #AllocationEditorRoot.DataContext.AmountColumnHeader}"
                                   Binding="{Binding PlannedAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:N2}'}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding SaveCommand}"/>
            <Button Content="Close" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
