<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.FiscalYearsView"
             x:DataType="vm:FiscalYearsViewModel">
    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <TextBlock Text="Fiscal Year Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FiscalYears}"
                  SelectedItem="{Binding SelectedFiscalYear}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='yyyy-MM-dd'}" Width="*"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='yyyy-MM-dd'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
            <Button Content="Refresh" Command="{Binding LoadFiscalYearsCommand}"/>
            <Button Content="Add New" Command="{Binding AddCommand}"/>
            <Button Content="Edit" Command="{Binding EditCommand}"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>