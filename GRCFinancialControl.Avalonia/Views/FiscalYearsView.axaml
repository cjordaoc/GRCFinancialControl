<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.FiscalYearsView"
             x:DataType="vm:FiscalYearsViewModel">
    <Grid RowDefinitions="Auto,*,Auto" Margin="{StaticResource CardPaddingThickness}">
        <TextBlock Text="Fiscal Year Management" Classes="TitleLarge" Margin="{StaticResource MarginBottomSmall}"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FiscalYears}"
                  SelectedItem="{Binding SelectedFiscalYear}"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*"/>
                <DataGridCheckBoxColumn Header="Locked" Binding="{Binding IsLocked}" Width="Auto"/>
                <DataGridTextColumn Header="Locked At" Binding="{Binding LockedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="*"/>
                <DataGridTextColumn Header="Locked By" Binding="{Binding LockedBy}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Vertical" Spacing="{StaticResource SpacingUnit}" Margin="{StaticResource MarginTopSmall}">
            <StackPanel Classes="ButtonRow"
                        HorizontalAlignment="Left">
                <Button Content="{loc:Loc Key=FINC_Button_Add}" Command="{Binding AddCommand}" MinWidth="{StaticResource ButtonMinWidth}"/>
                <Button Content="{loc:Loc Key=FINC_Button_Edit}"
                        Command="{Binding EditCommand}"
                        CommandParameter="{Binding SelectedFiscalYear}"
                        MinWidth="{StaticResource ButtonMinWidth}"/>
                <Button Content="{loc:Loc Key=FINC_Button_View}"
                        Command="{Binding ViewCommand}"
                        CommandParameter="{Binding SelectedFiscalYear}"
                        MinWidth="{StaticResource ButtonMinWidth}"/>
                <Button Content="{loc:Loc Key=FINC_Button_Delete}"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding SelectedFiscalYear}"
                        MinWidth="{StaticResource ButtonMinWidth}"/>
                <Button Content="{loc:Loc Key=FINC_Admin_ClosingPeriods_Button_DeleteData}"
                        Command="{Binding DeleteDataCommand}"
                        CommandParameter="{Binding SelectedFiscalYear}"
                        Classes="Danger"
                        MinWidth="{StaticResource ButtonMinWidth}"/>
                <Button Content="Close Fiscal Year"
                        Command="{Binding CloseCommand}"
                        CommandParameter="{Binding SelectedFiscalYear}"
                        Classes="accent"/>
                <Button Content="Lock"
                        Command="{Binding LockCommand}"
                        CommandParameter="{Binding SelectedFiscalYear}"/>
                <Button Content="Unlock"
                        Command="{Binding UnlockCommand}"
                        CommandParameter="{Binding SelectedFiscalYear}"/>
            </StackPanel>
            <TextBlock Foreground="{StaticResource BrushWarning}" Text="{Binding StatusMessage}"/>
        </StackPanel>
    </Grid>
</UserControl>