<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GRCFinancialControl.Avalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GRCFinancialControl.Avalonia.Views.MeasurementPeriodWindow"
        Title="Measurement Period Maintenance">
  <Design.DataContext>
    <vm:MeasurementPeriodViewModel/>
  </Design.DataContext>
  <DockPanel>
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="10">
      <Button Content="Add" Command="{Binding AddPeriodCommand}"/>
      <Button Content="Set Active" Command="{Binding SetActivePeriodCommand}" CommandParameter="{Binding #gridPeriods.SelectedItem}"/>
      <Button Content="Close" Click="CloseButton_Click"/>
    </StackPanel>
    <DataGrid Name="gridPeriods" ItemsSource="{Binding Periods}" AutoGenerateColumns="True" IsReadOnly="True"/>
  </DockPanel>
</Window>