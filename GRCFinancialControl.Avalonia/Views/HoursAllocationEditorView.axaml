<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:behaviors="clr-namespace:App.Presentation.Behaviors;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="GRCFinancialControl.Avalonia.Views.HoursAllocationEditorView"
             x:Name="HoursAllocationEditorRoot"
             x:DataType="vm:HoursAllocationEditorViewModel">
    <UserControl.Resources>
        <converters:TrafficLightStatusToBrushConverter x:Key="TrafficLightStatusToBrushConverter" />
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" ColumnDefinitions="*"
          Margin="{DynamicResource CardPaddingThickness}">
        <TextBlock Grid.Row="0"
                   Text="{Binding Header}"
                   Classes="TitleMedium"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="{DynamicResource SectionSpacing}">
            <TextBlock Text="{Binding TotalBudgetHours, StringFormat='Budget Hours: {0:N2} h'}"/>
            <TextBlock Text="{Binding ActualHours, StringFormat='Actual Hours: {0:N2} h'}"/>
            <TextBlock Text="{Binding RemainingHours, StringFormat='Remaining Hours: {0:N2} h'}"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Spacing="{DynamicResource ControlSpacing}">
            <TextBlock Text="Resource:" FontWeight="{StaticResource FontWeightSemiBold}"/>
            <TextBlock Text="{Binding SelectedRow.RankName}"/>
            <TextBlock Text="{Binding SelectedRow.TrafficLightSymbol}"
                       FontSize="{StaticResource FontSizeSubtitle}"
                       Foreground="{Binding SelectedRow.Status, Converter={StaticResource TrafficLightStatusToBrushConverter}}"/>
        </StackPanel>

        <TextBlock Grid.Row="3"
                   Text="{Binding StatusMessage}"
                   Foreground="{StaticResource BrushWarning}"/>

        <DataGrid Grid.Row="4"
                  ItemsSource="{Binding FiscalYearRows}"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="False"
                  Margin="{DynamicResource CardPaddingThickness}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fiscal Year"
                                    Binding="{Binding FiscalYearName}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Budget Hours"
                                    Binding="{Binding BudgetHours, StringFormat='{}{0:N2}'}"
                                    IsReadOnly="True"
                                    Width="*"/>
                <DataGridTemplateColumn Header="Incurred Hours" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding IncurredHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditable}"
                                     HorizontalContentAlignment="Right"
                                     MinWidth="{StaticResource InputMinWidthCompact}"
                                     behaviors:NumericInputNullSafety.IsEnabled="True"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Additional Hours" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding AdditionalHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Right"
                                     MinWidth="{StaticResource InputMinWidthCompact}"
                                     behaviors:NumericInputNullSafety.IsEnabled="True"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Remaining Hours"
                                    Binding="{Binding RemainingHours, StringFormat='{}{0:N2}'}"
                                    IsReadOnly="True"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="{DynamicResource ControlSpacing}">
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    IsDefault="True"
                    MinWidth="{StaticResource InputMinWidthStandard}"/>
            <Button Content="Cancel"
                    Command="{Binding CloseCommand}"
                    IsCancel="True"
                    MinWidth="{StaticResource InputMinWidthStandard}"/>
        </StackPanel>
    </Grid>
</UserControl>
