<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
        xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="GRCFinancialControl.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GRC Financial Control"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="220,*">
        <Border Background="{DynamicResource SystemAccentColor}" Margin="0" Padding="0,20">
            <StackPanel>
                <TextBlock Text="GRC Control"
                           FontSize="{StaticResource FontSizeXL}"
                           FontWeight="Bold"
                           Foreground="{StaticResource BrushOnSurface}"
                           Margin="20,0,20,20"/>
                <TreeView ItemsSource="{Binding NavigationItems}"
                          SelectedItem="{Binding SelectedNavigationItem}"
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="{StaticResource BrushOnSurface}">
                    <TreeView.ItemTemplate>
                        <TreeDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Title}" Margin="20,6" FontSize="16"/>
                        </TreeDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Padding="{StaticResource SpaceThickness20}">
            <ContentControl Content="{Binding ActiveView}"
                            IsVisible="{Binding ActiveView, Converter={x:Static converters:ObjectConverters.IsNotNull}}"/>
        </Border>

        <Panel Grid.ColumnSpan="2"
               Background="{StaticResource BrushOverlayStrong}"
               IsVisible="{Binding CurrentDialog, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
            <ContentControl Content="{Binding CurrentDialog}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
        </Panel>
    </Grid>

</Window>
