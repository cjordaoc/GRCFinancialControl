<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
        xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
        xmlns:services="clr-namespace:App.Presentation.Services;assembly=App.Presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
        mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="640"
        x:Class="GRCFinancialControl.Avalonia.Views.MainWindow"
        x:Name="MainWindowRoot"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{loc:Loc Key=Shell.Title.Application}"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                             TintColor="Black"
                                             TintOpacity="1"
                                             MaterialOpacity="0.65"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid ColumnDefinitions="240,*" Margin="16">
            <Border Grid.Column="0"
                    Padding="16"
                    Background="{StaticResource BrushSurfaceVariant}"
                    CornerRadius="{StaticResource CornerRadiusMD}">
                <StackPanel Spacing="12">
                    <TextBlock Text="{loc:Loc Key=Shell.Brand.Primary}"
                               FontSize="{StaticResource FontSizeXL}"
                               FontWeight="Bold"
                               Foreground="{StaticResource BrushOnSurface}"/>
                    <ItemsControl ItemsSource="{Binding NavigationItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:NavigationItem">
                                <StackPanel Spacing="4">
                                    <ToggleButton Content="{Binding Title}"
                                                  Command="{Binding DataContext.SelectNavigationItemCommand, ElementName=MainWindowRoot}"
                                                  CommandParameter="{Binding}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Classes="NavButton"/>
                                    <ItemsControl ItemsSource="{Binding Children}"
                                                  Margin="16,0,0,0"
                                                  IsVisible="{Binding HasChildren}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:NavigationItem">
                                                <ToggleButton Content="{Binding Title}"
                                                              Command="{Binding DataContext.SelectNavigationItemCommand, ElementName=MainWindowRoot}"
                                                              CommandParameter="{Binding}"
                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              Classes="NavButton"
                                                              Margin="0,4,0,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Classes="Card"
                    Padding="0"
                    Margin="16,0,0,0">
                <ContentControl Content="{Binding ActiveView}"
                                IsVisible="{Binding ActiveView, Converter={x:Static converters:ObjectConverters.IsNotNull}}"/>
            </Border>
        </Grid>

        <ItemsControl Margin="0,32,32,0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      ItemsSource="{x:Static services:ToastService.Notifications}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Spacing="12"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="services:ToastNotification">
                    <Border Classes="ToastNotification"
                            Background="{Binding Type, Converter={StaticResource ToastBrushConverter}}">
                        <TextBlock Text="{Binding Message}"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource BrushOnSurface}"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Panel>
</Window>
