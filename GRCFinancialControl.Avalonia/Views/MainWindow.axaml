<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
        xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="GRCFinancialControl.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GRC Financial Control">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="220,*">
        <Border Background="{DynamicResource SystemAccentColor}" Margin="0" Padding="0,20">
            <StackPanel>
                <TextBlock Text="GRC Control" FontSize="20" FontWeight="Bold" Foreground="White" Margin="20,0,20,20"/>
                <ListBox ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="White"
                         Margin="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}"
                                       Margin="20,6"
                                       FontSize="16"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Padding="20">
            <ContentControl Content="{Binding ActiveView}"
                            IsVisible="{Binding ActiveView, Converter={x:Static converters:ObjectConverters.IsNotNull}}"/>
        </Border>

        <Panel Grid.ColumnSpan="2"
               Background="#7F000000"
               IsVisible="{Binding CurrentDialog, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
            <ContentControl Content="{Binding CurrentDialog}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
        </Panel>
    </Grid>

</Window>

