<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="640"
             x:Class="GRCFinancialControl.Avalonia.Views.ImportView"
             x:DataType="vm:ImportViewModel">
    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <Border Classes="Card" Padding="24">
                <StackPanel Spacing="18">
                    <TextBlock Text="{loc:Loc Key=Import.Title.Primary}"
                               Classes="TitleLarge"/>
                    <StackPanel Orientation="Horizontal"
                                Spacing="12"
                                IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}">
                        <Button Content="{loc:Loc Key=Import.Button.Budget}"
                                Command="{Binding SetImportTypeCommand}"
                                CommandParameter="Budget"
                                Classes="accent"/>
                        <Button Content="{loc:Loc Key=Import.Button.AllocationPlanning}"
                                Command="{Binding SetImportTypeCommand}"
                                CommandParameter="AllocationPlanning"
                                Classes="accent"/>
                        <Button Content="{loc:Loc Key=Import.Button.FullManagement}"
                                Command="{Binding SetImportTypeCommand}"
                                CommandParameter="FullManagement"
                                Classes="accent"/>
                    </StackPanel>
                    <Border Background="{StaticResource BrushSurfaceVariant}"
                            CornerRadius="{StaticResource CornerRadiusSM}"
                            Padding="16"
                            IsVisible="{Binding FileType, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding SelectedImportTitle}"
                                       FontSize="{StaticResource FontSizeLG}"
                                       FontWeight="SemiBold"/>
                            <Button Content="{loc:Loc Key=Import.Button.SelectFile}"
                                    Command="{Binding ImportCommand}"
                                    Classes="accent"
                                    IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"/>
                            <ProgressBar IsIndeterminate="True"
                                         Height="6"
                                         IsVisible="{Binding IsImporting}"/>
                            <Border Background="{StaticResource BrushSurfaceMuted}"
                                    CornerRadius="{StaticResource CornerRadiusSM}"
                                    Padding="12"
                                    IsVisible="{Binding StatusMessage, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
                                <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
