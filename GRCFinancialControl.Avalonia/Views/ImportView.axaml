<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="640"
             x:Class="GRCFinancialControl.Avalonia.Views.ImportView"
             x:DataType="vm:ImportViewModel">
    <ScrollViewer>
        <StackPanel Margin="{StaticResource PageMarginThickness}" Spacing="{StaticResource SectionSpacing}">
            <Border Classes="Card" Padding="{StaticResource CardPaddingThickness}">
                <StackPanel Spacing="{StaticResource SectionSpacing}">
                    <TextBlock Text="{loc:Loc Key=FINC_Import_Title_Primary}"
                               Classes="TitleLarge"/>
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="{StaticResource GridGap}">
                        <!-- New Engagements Panel -->
                        <Border Grid.Column="0"
                                Classes="Card"
                                Padding="{StaticResource CardPaddingThickness}"
                                Background="{StaticResource BrushSurfaceVariant}">
                            <StackPanel Spacing="{StaticResource ControlSpacing}">
                                <TextBlock Text="{loc:Loc Key=FINC_Import_Panel_NewEngagements}" Classes="TitleSmall"/>
                                <Button Content="{loc:Loc Key=FINC_Import_Button_Budget}"
                                        Command="{Binding SetImportTypeCommand}"
                                        CommandParameter="Budget"
                                        Classes="accent"
                                        IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Team Allocation Panel -->
                        <Border Grid.Column="1"
                                Classes="Card"
                                Padding="{StaticResource CardPaddingThickness}"
                                Background="{StaticResource BrushSurfaceVariant}">
                            <StackPanel Spacing="{StaticResource ControlSpacing}">
                                <TextBlock Text="{loc:Loc Key=FINC_Import_Panel_TeamAllocation}" Classes="TitleSmall"/>
                                <Button Content="{loc:Loc Key=FINC_Import_Button_AllocationPlanning}"
                                        Command="{Binding SetImportTypeCommand}"
                                        CommandParameter="AllocationPlanning"
                                        Classes="accent"
                                        IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Financial Data Panel -->
                        <Border Grid.Column="2"
                                Classes="Card"
                                Padding="{StaticResource CardPaddingThickness}"
                                Background="{StaticResource BrushSurfaceVariant}">
                            <StackPanel Spacing="{StaticResource ControlSpacing}">
                                <TextBlock Text="{loc:Loc Key=FINC_Import_Panel_FinancialData}" Classes="TitleSmall"/>
                                <Button Content="{loc:Loc Key=FINC_Import_Button_FullManagement}"
                                        Command="{Binding SetImportTypeCommand}"
                                        CommandParameter="FullManagement"
                                        Classes="accent"
                                        IsEnabled="{Binding CanSelectFullManagement}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Border Background="{StaticResource BrushSurfaceMuted}"
                            CornerRadius="{StaticResource ControlCornerRadius}"
                            Padding="{StaticResource CardPaddingThickness}"
                            IsVisible="{Binding ClosingPeriodSelectionWarning, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
                        <TextBlock Text="{Binding ClosingPeriodSelectionWarning}" TextWrapping="Wrap"/>
                    </Border>
                    <Border Background="{StaticResource BrushSurfaceVariant}"
                            CornerRadius="{StaticResource ControlCornerRadius}"
                            Padding="{StaticResource CardPaddingThickness}"
                            IsVisible="{Binding FileType, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="{StaticResource ControlSpacing}">
                            <TextBlock Text="{Binding SelectedImportTitle}"
                                       Classes="TitleSmall"/>
                            <Button Content="{loc:Loc Key=FINC_Import_Button_SelectFile}"
                                    Command="{Binding ImportCommand}"
                                    Classes="accent"/>
                            <ProgressBar IsIndeterminate="True"
                                         Height="6"
                                         IsVisible="{Binding IsImporting}"/>
                            <Border Background="{StaticResource BrushSurfaceMuted}"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    Padding="{StaticResource CardPaddingThickness}"
                                    IsVisible="{Binding StatusMessage, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
                                <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>