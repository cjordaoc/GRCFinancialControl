<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GRCFinancialControl.Avalonia.ViewModels"
             xmlns:converters="using:GRCFinancialControl.Avalonia.Converters"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GRCFinancialControl.Avalonia.Views.ImportView"
             x:DataType="vm:ImportViewModel">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="{loc:Loc Key=Import.Title.Primary}" FontSize="24" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal"
                    Spacing="10"
                    Margin="0,10,0,0"
                    IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}">
            <Button Content="{loc:Loc Key=Import.Button.Budget}" Command="{Binding SetImportTypeCommand}" CommandParameter="Budget" Classes="accent"/>
            <Button Content="{loc:Loc Key=Import.Button.Actuals}" Command="{Binding SetImportTypeCommand}" CommandParameter="Actuals" Classes="accent"/>
            <Button Content="{loc:Loc Key=Import.Button.FullManagement}" Command="{Binding SetImportTypeCommand}" CommandParameter="FullManagement" Classes="accent"/>
        </StackPanel>

        <Panel IsVisible="{Binding FileType, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,10,0,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding SelectedImportTitle}" FontSize="18" FontWeight="SemiBold"/>

                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center"
                                IsVisible="{Binding FileType, Converter={x:Static converters:ObjectConverters.AreEqual}, ConverterParameter=Actuals}">
                        <TextBlock Text="{loc:Loc Key=Import.Label.ClosingPeriod}" VerticalAlignment="Center"/>
                        <ComboBox Width="260"
                                  ItemsSource="{Binding ClosingPeriods}"
                                  SelectedItem="{Binding SelectedClosingPeriod}"
                                  IsEnabled="{Binding CanModifyClosingPeriod}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock>
                                            <TextBlock.Inlines>
                                                <Run Text="("/>
                                                <Run Text="{Binding PeriodStart, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding PeriodEnd, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                                <Run Text=")"/>
                                            </TextBlock.Inlines>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="{loc:Loc Key=Import.Status.NoUnlockedClosingPeriods}"
                                   Foreground="{StaticResource BrushError}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding IsClosingPeriodSelectionUnavailable}"/>
                    </StackPanel>

                    <Button Content="{loc:Loc Key=Import.Button.SelectFile}"
                            Command="{Binding ImportCommand}"
                            Classes="accent"
                            IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"/>
                    <ProgressBar IsIndeterminate="True"
                                 Height="6"
                                 IsVisible="{Binding IsImporting}"/>
                    <TextBox Text="{Binding StatusMessage}" Margin="0,10,0,0" TextWrapping="Wrap" IsReadOnly="True" />
                </StackPanel>
            </Border>
        </Panel>
    </StackPanel>
</UserControl>
