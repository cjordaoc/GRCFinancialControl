<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:InvoicePlanner.Avalonia.ViewModels"
        xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
        xmlns:services="clr-namespace:App.Presentation.Services;assembly=App.Presentation"
        xmlns:sharedControls="clr-namespace:GRC.Shared.UI.Controls;assembly=GRC.Shared.UI"
        x:Class="InvoicePlanner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        mc:Ignorable="d"
        MinWidth="960"
        MinHeight="640"
        WindowState="Maximized"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="{StaticResource WindowTitleBarHeight}"
        Padding="{StaticResource WindowClientPadding}"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}">
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   Material="{StaticResource AcrylicModal}"/>

        <Grid Margin="{DynamicResource PageMarginThickness}" ColumnDefinitions="Auto,*" ColumnSpacing="{DynamicResource GridGap}">
        <sharedControls:SidebarHost Grid.Column="0"
                                    Header="{Binding Title}"
                                    ExpandedLabel="{loc:Loc Key=Global_SidebarCollapse}"
                                    CollapsedLabel="{loc:Loc Key=Global_SidebarExpand}"
                                    ItemsSource="{Binding MenuItems}"
                                    CompactWidth="{StaticResource SidebarCompactWidth}"
                                    ExpandedWidth="{StaticResource SidebarExpandedWidth}"
                                    IsExpanded="{Binding IsSidebarExpanded, Mode=TwoWay}">
            <sharedControls:SidebarHost.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding .}" Classes="TitleLarge"/>
                </DataTemplate>
            </sharedControls:SidebarHost.HeaderTemplate>
            <sharedControls:SidebarHost.ItemTemplate>
                <DataTemplate x:DataType="vm:NavigationItemViewModel">
                    <ToggleButton Command="{Binding SelectCommand}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch"
                                  Classes="NavButton"
                                  ToolTip.Tip="{Binding Title}">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal"
                                        Spacing="{DynamicResource SpacingUnit}"
                                        VerticalAlignment="Center">
                                <Path Data="{Binding Icon}"
                                      Width="20"
                                      Height="20"
                                      Fill="{StaticResource BrushOnSurface}"
                                      Stretch="Uniform"
                                      VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Title}"
                                           VerticalAlignment="Center"
                                           Classes="SidebarTitle"
                                           IsVisible="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=sharedControls:SidebarHost}}"/>
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                </DataTemplate>
            </sharedControls:SidebarHost.ItemTemplate>
        </sharedControls:SidebarHost>

        <Border Grid.Column="1" Classes="Card" Padding="{DynamicResource CardPaddingThickness}">
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Border>

            <ItemsControl Grid.ColumnSpan="2"
                          Margin="{DynamicResource MarginCallout}"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          ItemsSource="{x:Static services:ToastService.Notifications}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="{DynamicResource ControlSpacing}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="services:ToastNotification">
                        <Border Classes="ToastControl"
                                Background="{Binding Type, Converter={StaticResource ToastBrushConverter}}">
                            <TextBlock Text="{Binding Message}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource BrushOnSurface}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Panel>
</Window>
