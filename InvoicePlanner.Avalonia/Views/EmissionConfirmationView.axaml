<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:InvoicePlanner.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             x:Class="InvoicePlanner.Avalonia.Views.EmissionConfirmationView"
             x:DataType="vm:EmissionConfirmationViewModel"
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="{StaticResource SectionSpacing}" Margin="{StaticResource CardPaddingThickness}">
                <Border Classes="Card" Padding="{StaticResource CardPaddingThickness}">
                    <StackPanel Spacing="{StaticResource SectionSpacing}">
                        <TextBlock Classes="TitleMedium" Text="{loc:Loc Key=INV_Emission_Title_Primary}" />
                        <TextBlock Text="{loc:Loc Key=INV_Emission_Description_Primary}" />
                        <StackPanel Spacing="{StaticResource ControlSpacing}">
                        <TextBlock Text="{loc:Loc Key=INV_Emission_Section_AvailablePlans_Header}" FontWeight="{StaticResource FontWeightSemiBold}" />
                            <TextBlock Text="{Binding PlanSelectionMessage}" TextWrapping="Wrap" />
                            <DataGrid ItemsSource="{Binding AvailablePlans}"
                                      SelectedItem="{Binding SelectedPlan, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="All"
                                      HorizontalScrollBarVisibility="Auto"
                                      IsVisible="{Binding HasAvailablePlans}"
                                      MaxHeight="220"
                                      Margin="{StaticResource MarginTopXSmall}"
                                      IsReadOnly="True"
                                      SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_PlanId}" Binding="{Binding Id}" Width="80"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_Engagement}" Binding="{Binding EngagementId}" Width="160"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding EngagementDescription}" Width="220"/>
                                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="180"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_Type}" Binding="{Binding TypeName}" Width="120"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_FirstEmission}" Binding="{Binding FirstEmissionDate, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_Requested}" Binding="{Binding RequestedItemCount}" Width="140"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_Emitted}" Binding="{Binding EmittedItemCount}" Width="120"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_Closed}" Binding="{Binding ClosedItemCount}" Width="120"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_Selection_Column_Canceled}" Binding="{Binding CanceledItemCount}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource ControlSpacing}">
                                <Button Content="{loc:Loc Key=INV_Button_Refresh}"
                                        Command="{Binding RefreshCommand}"
                                        MinWidth="140"/>
                                <Button Content="{loc:Loc Key=INV_Emission_Button_InsertBzData}"
                                        Command="{Binding LoadPlanCommand}"
                                        MinWidth="200"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Padding="{StaticResource CardPaddingThickness}" IsVisible="{Binding IsPlanDetailsVisible}">
                    <StackPanel Spacing="{StaticResource SectionSpacing}">
                        <TextBlock Classes="TitleMedium" Text="{loc:Loc Key=INV_Emission_Section_InvoiceDetails_Header}" />
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource SectionSpacing}">
                            <TextBlock Text="{Binding EngagementDisplay}" />
                            <TextBlock Text="{Binding RequestedCountDisplay}" />
                            <TextBlock Text="{Binding EmittedCountDisplay}" />
                            <TextBlock Text="{Binding CanceledCountDisplay}" />
                        </StackPanel>
                        <DataGrid ItemsSource="{Binding Lines}"
                                  SelectedItem="{Binding SelectedLine, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="All"
                                  HorizontalAlignment="Stretch"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  IsReadOnly="True"
                                  MaxHeight="260">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_InvoicePlan_TableHeader_Sequence}" Binding="{Binding Sequence}" Width="80"/>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_Emission_TableHeader_EmissionDate}" Binding="{Binding EmissionDate, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_Emission_TableHeader_DueDate}" Binding="{Binding DueDate, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                                <DataGridTemplateColumn Header="{loc:Loc Key=INV_Emission_TableHeader_Amount}" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EmissionConfirmationLineViewModel">
                                            <TextBlock Text="{Binding AmountDisplay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_Request_TableHeader_Ritm}" Binding="{Binding RitmNumber}" Width="160"/>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_Request_TableHeader_Status}" Binding="{Binding Status}" Width="120"/>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_Emission_TableHeader_BzCode}" Binding="{Binding BzCode}" Width="160"/>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_Emission_TableHeader_EmittedAt}" Binding="{Binding EmittedAt, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                                <DataGridTextColumn Header="{loc:Loc Key=INV_Emission_TableHeader_LastCancelReason}" Binding="{Binding LastCancellationReason}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Spacing="{StaticResource ControlSpacing}" IsVisible="{Binding HasSelectedLine}">
                            <ContentControl Content="{Binding SelectedLine}">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate x:DataType="vm:EmissionConfirmationLineViewModel">
                                        <Grid ColumnDefinitions="Auto,1*"
                                              RowDefinitions="Auto,Auto,Auto,Auto"
                                              ColumnSpacing="{StaticResource GridGap}"
                                              RowSpacing="{StaticResource GridGap}">
                                            <TextBlock Grid.Row="0"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{loc:Loc Key=INV_Emission_TableHeader_BzCode}" />
                                            <TextBox Grid.Row="0"
                                                     Grid.Column="1"
                                                     Text="{Binding BzCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                            <TextBlock Grid.Row="1"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{loc:Loc Key=INV_Emission_TableHeader_EmittedAt}" />
                                            <CalendarDatePicker Grid.Row="1"
                                                               Grid.Column="1"
                                                               SelectedDate="{Binding EmittedAt, Mode=TwoWay, Converter={StaticResource DateTimeOffsetToDateTimeConverter}}" />

                                            <TextBlock Grid.Row="2"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{loc:Loc Key=INV_Emission_TableHeader_CancelReason}" />
                                            <TextBox Grid.Row="2"
                                                     Grid.Column="1"
                                                     Text="{Binding CancelReason, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsEmitted}"
                                                     Watermark="{loc:Loc Key=INV_Placeholder_Reason}" />

                                            <TextBlock Grid.Row="3"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{loc:Loc Key=INV_Emission_TableHeader_LastCancelReason}" />
                                            <TextBlock Grid.Row="3"
                                                       Grid.Column="1"
                                                       Text="{Binding LastCancellationReason}"
                                                       TextWrapping="Wrap" />
                                        </Grid>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Spacing="{StaticResource ControlSpacing}">
                                <Button Content="{loc:Loc Key=Global_Button_Save}"
                                        Command="{Binding SavePlanDetailsCommand}"
                                        MinWidth="{StaticResource ButtonMinWidth}" />
                                <Button Content="{loc:Loc Key=INV_Emission_Button_CancelEmission}"
                                        Command="{Binding CancelSelectedLineCommand}"
                                        IsVisible="{Binding HasEmittedSelectedLine}"
                                        MinWidth="{StaticResource ButtonMinWidth}" />
                                <Button Content="{loc:Loc Key=INV_Button_Close}"
                                        Command="{Binding ClosePlanDetailsCommand}"
                                        MinWidth="{StaticResource ButtonMinWidth}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Spacing="{StaticResource SpacingUnit}">
                    <TextBlock Text="{Binding ValidationMessage}"
                               Classes="StatusError"
                               IsVisible="{Binding HasValidationMessage}" />
                    <TextBlock Text="{Binding StatusMessage}"
                               Classes="StatusSuccess"
                               IsVisible="{Binding HasStatusMessage}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>