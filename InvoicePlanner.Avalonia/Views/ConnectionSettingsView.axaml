<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:InvoicePlanner.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             mc:Ignorable="d"
             x:Class="InvoicePlanner.Avalonia.Views.ConnectionSettingsView"
             x:DataType="vm:ConnectionSettingsViewModel"
             d:DesignWidth="800"
             d:DesignHeight="450">
    <ScrollViewer>
        <StackPanel Margin="{StaticResource PageMarginThickness}" Spacing="{StaticResource SectionSpacing}">
            <Border Classes="Card" Padding="{StaticResource CardPaddingThickness}">
                <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="Auto, *, Auto" ColumnSpacing="{StaticResource ControlSpacing}" RowSpacing="{StaticResource ControlSpacing}">
                    <!-- Section 1: Language -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="{loc:Loc Key=INV_Connection_Label_Language}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               Classes="TitleSmall"/>
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding SelectedLanguage}"
                              MinWidth="200"
                              HorizontalAlignment="Left">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Section 2: Database connection -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="{loc:Loc Key=INV_Connection_Label_Package}"
                               VerticalAlignment="Center"
                               Margin="0,12,8,0"
                               Classes="TitleSmall"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding SelectedPackagePath}"
                             Watermark="{loc:Loc Key=INV_Connection_Placeholder_Package}"
                             IsReadOnly="True"
                             MinWidth="{StaticResource InputMinWidthStandard}"
                             MinHeight="{StaticResource InputHeightStandard}"
                             Margin="0,12,8,0"
                             VerticalAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="2"
                            Content="{loc:Loc Key=INV_Connection_Button_Browse}"
                            Command="{Binding BrowseCommand}"
                            MinWidth="{StaticResource ButtonMinWidth}"
                            MinHeight="{StaticResource ButtonMinHeight}"
                            Margin="0,12,0,0"/>

                    <!-- Section 3: Passphrase -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="{loc:Loc Key=INV_Connection_Label_Passphrase}"
                               VerticalAlignment="Center"
                               Margin="0,12,8,0"
                               Classes="TitleSmall"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Text="{Binding Passphrase}"
                             Watermark="{loc:Loc Key=INV_Connection_Placeholder_Passphrase}"
                             PasswordChar="â€¢"
                             MinWidth="{StaticResource InputMinWidthStandard}"
                             MinHeight="{StaticResource InputHeightStandard}"
                             Margin="0,12,0,0"/>

                    <!-- Section 4: Import -->
                    <Button Grid.Row="3" Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Content="{loc:Loc Key=INV_Connection_Button_Import}"
                            Command="{Binding ImportCommand}"
                            MinHeight="{StaticResource ButtonMinHeight}"
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0"/>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
