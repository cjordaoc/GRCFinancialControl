<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:InvoicePlanner.Avalonia.ViewModels"
             xmlns:loc="clr-namespace:App.Presentation.Localization;assembly=App.Presentation"
             x:Class="InvoicePlanner.Avalonia.Views.RequestConfirmationView"
             x:DataType="vm:RequestConfirmationViewModel"
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="{StaticResource Spacing16}" Margin="{StaticResource SpaceThickness16}">
                <Border Classes="Card" Padding="{StaticResource SpaceThickness24}">
                    <StackPanel Spacing="{StaticResource Spacing16}">
                        <TextBlock Classes="TitleMedium" Text="{loc:Loc Key=Request.Title.Primary}" />
                        <TextBlock Text="{loc:Loc Key=Request.Description.Primary}" />
                        <StackPanel Spacing="{StaticResource Spacing12}">
                        <TextBlock Text="{loc:Loc Key=Request.Section.AvailablePlans.Header}" FontWeight="{StaticResource FontWeightSemiBold}" />
                            <TextBlock Text="{Binding PlanSelectionMessage}" TextWrapping="Wrap" />
                            <DataGrid ItemsSource="{Binding AvailablePlans}"
                                      SelectedItem="{Binding SelectedPlan, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="All"
                                      HorizontalScrollBarVisibility="Auto"
                                      IsVisible="{Binding HasAvailablePlans}"
                                      MaxHeight="220"
                                      Margin="{StaticResource MarginTopXSmall}"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.PlanId}" Binding="{Binding Id}" Width="80"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.Engagement}" Binding="{Binding EngagementId}" Width="160"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.Type}" Binding="{Binding TypeName}" Width="120"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.FirstEmission}" Binding="{Binding FirstEmissionDate, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.PendingRequests}" Binding="{Binding PlannedItemCount}" Width="140"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.Requested}" Binding="{Binding RequestedItemCount}" Width="140"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.Closed}" Binding="{Binding ClosedItemCount}" Width="120"/>
                                    <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.Selection.Column.Canceled}" Binding="{Binding CanceledItemCount}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource Space12}">
                                <Button Content="{loc:Loc Key=Common.Button.Refresh}"
                                        Command="{Binding RefreshCommand}"
                                        MinWidth="140"/>
                                <Button Content="{loc:Loc Key=Request.Button.InsertData}"
                                        Command="{Binding LoadPlanCommand}"
                                        MinWidth="200"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Padding="{StaticResource SpaceThickness24}" IsVisible="{Binding IsPlanDetailsVisible}">
                    <StackPanel Spacing="{StaticResource Spacing16}">
                        <TextBlock Classes="TitleMedium" Text="{loc:Loc Key=Request.Section.InvoiceDetails.Header}" />
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource Space16}">
                            <TextBlock Text="{Binding EngagementDisplay}" />
                            <TextBlock Text="{Binding PlannedCountDisplay}" />
                            <TextBlock Text="{Binding RequestedCountDisplay}" />
                        </StackPanel>
                        <DataGrid ItemsSource="{Binding Lines}"
                                  SelectedItem="{Binding SelectedLine, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="All"
                                  HorizontalAlignment="Stretch"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  IsReadOnly="True"
                                  MaxHeight="260">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{loc:Loc Key=InvoicePlan.TableHeader.Sequence}" Binding="{Binding Sequence}" Width="80"/>
                                <DataGridTextColumn Header="{loc:Loc Key=Request.TableHeader.EmissionDate}" Binding="{Binding EmissionDate, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                                <DataGridTemplateColumn Header="{loc:Loc Key=Request.TableHeader.Amount}" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:DataType="vm:RequestConfirmationLineViewModel">
                                        <TextBlock Text="{Binding AmountDisplay}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                                <DataGridTextColumn Header="{loc:Loc Key=Request.TableHeader.Ritm}" Binding="{Binding RitmNumber}" Width="160"/>
                                <DataGridTextColumn Header="{loc:Loc Key=Request.TableHeader.Coe}" Binding="{Binding CoeResponsible}" Width="180"/>
                                <DataGridTextColumn Header="{loc:Loc Key=Request.TableHeader.RequestDate}" Binding="{Binding RequestDate, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                                <DataGridTextColumn Header="{loc:Loc Key=Request.TableHeader.Status}" Binding="{Binding Status}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Spacing="{StaticResource Space12}" IsVisible="{Binding HasSelectedLine}">
                            <ContentControl Content="{Binding SelectedLine}">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate x:DataType="vm:RequestConfirmationLineViewModel">
                                        <Grid ColumnDefinitions="Auto,1*"
                                              RowDefinitions="Auto,Auto,Auto"
                                              ColumnSpacing="{StaticResource Space16}"
                                              RowSpacing="{StaticResource Space12}">
                                            <TextBlock Grid.Row="0"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{loc:Loc Key=Request.TableHeader.Ritm}" />
                                            <TextBox Grid.Row="0"
                                                     Grid.Column="1"
                                                     Text="{Binding RitmNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <TextBlock Grid.Row="1"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{loc:Loc Key=Request.TableHeader.Coe}" />
                                            <TextBox Grid.Row="1"
                                                     Grid.Column="1"
                                                     Text="{Binding CoeResponsible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <TextBlock Grid.Row="2"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{loc:Loc Key=Request.TableHeader.RequestDate}" />
                                            <CalendarDatePicker Grid.Row="2"
                                                               Grid.Column="1"
                                                               SelectedDate="{Binding RequestDate, Mode=TwoWay, Converter={StaticResource DateTimeOffsetToDateTimeConverter}}" />
                                        </Grid>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Spacing="{StaticResource Space12}">
                                <Button Content="{loc:Loc Key=Common.Button.Save}"
                                        Command="{Binding SavePlanDetailsCommand}"
                                        MinWidth="120" />
                                <Button Content="{loc:Loc Key=Request.Button.Reverse}"
                                        Command="{Binding ReverseSelectedLineCommand}"
                                        MinWidth="120" />
                                <Button Content="{loc:Loc Key=Common.Button.Close}"
                                        Command="{Binding ClosePlanDetailsCommand}"
                                        MinWidth="120" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Spacing="{StaticResource Spacing4}">
                    <TextBlock Text="{Binding ValidationMessage}"
                               Classes="StatusError"
                               IsVisible="{Binding HasValidationMessage}" />
                    <TextBlock Text="{Binding StatusMessage}"
                               Classes="StatusSuccess"
                               IsVisible="{Binding HasStatusMessage}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
