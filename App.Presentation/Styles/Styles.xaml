<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:App.Presentation.Converters">
  <Styles.Resources>
    <!-- Elevation Tokens -->
    <x:Double x:Key="Elevation1">4</x:Double>
    <x:Double x:Key="Elevation2">8</x:Double>
    <x:Double x:Key="Elevation3">16</x:Double>

    <!-- Shared Layout Tokens -->
    <Thickness x:Key="ButtonPaddingStandard">12,6</Thickness>
    <Thickness x:Key="DialogContentPadding">16</Thickness>
    <x:Double x:Key="PopupTextBoxMinWidth">280</x:Double>
    <x:Double x:Key="PopupDatePickerMinWidth">240</x:Double>
    <converters:ToastTypeToBrushConverter x:Key="ToastBrushConverter"
                                          SuccessBrush="{StaticResource BrushSuccess}"
                                          WarningBrush="{StaticResource BrushWarningHighlight}"
                                          ErrorBrush="{StaticResource BrushError}" />

    <Style x:Key="DataGridWrappedTextStyle" Selector="TextBlock">
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="TextTrimming" Value="None" />
      <Setter Property="MaxWidth" Value="420" />
    </Style>
  </Styles.Resources>

  <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
  <StyleInclude Source="avares://App.Presentation/Styles/ModalOverlay.xaml" />

  <Style Selector="Border.Card">
    <Setter Property="Background" Value="{StaticResource BrushSurfaceVariant}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
    <Setter Property="BorderThickness" Value="{StaticResource BorderThin}" />
    <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}" />
    <Setter Property="BoxShadow" Value="{StaticResource ShadowLow}" />
  </Style>

  <Style Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="TextBox">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="MinHeight" Value="{StaticResource InputHeightStandard}" />
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="MinHeight" Value="{StaticResource InputHeightStandard}" />
  </Style>

  <Style Selector="TextBlock.TitleLarge">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize24}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="TextBlock.TitleMedium">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize20}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="TextBlock.TitleSmall">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize18}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="TextBlock.TitleXSmall">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize16}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="TextBlock.Caption">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize12}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="Opacity" Value="0.8" />
  </Style>

  <Style Selector="TextBlock.StatusSuccess">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource BrushSuccess}" />
  </Style>

  <Style Selector="TextBlock.StatusError">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource BrushError}" />
  </Style>

  <Style Selector="DatePicker">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="MinWidth" Value="{StaticResource PopupDatePickerMinWidth}" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="MinHeight" Value="{StaticResource InputHeightStandard}" />
  </Style>

  <Style Selector="NumericUpDown">
    <Setter Property="MinHeight" Value="{StaticResource InputHeightStandard}" />
  </Style>

  <Style Selector="ToggleButton.NavButton">
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="Padding" Value="{StaticResource ButtonPaddingStandard}" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="ToggleButton.NavButton:pointerover">
    <Setter Property="Background" Value="{StaticResource BrushSurfaceVariant}" />
  </Style>

  <Style Selector="ToggleButton.NavButton:checked">
    <Setter Property="Background" Value="{StaticResource BrushPrimary}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="DataGridRow:selected">
    <Setter Property="Background" Value="{StaticResource BrushSurfaceVariant}" />
  </Style>

  <Style Selector="DataGridColumnHeader">
    <Setter Property="Background" Value="{StaticResource BrushSurfaceVariant}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="Padding" Value="{StaticResource SpaceThickness12}" />
  </Style>

  <Style Selector="TabItem">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
  </Style>
</Styles>
