<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:App.Presentation.ViewModels"
        mc:Ignorable="d"
        x:Class="App.Presentation.Views.AuthenticationSplashWindow"
        Width="360"
        Height="220"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        SystemDecorations="BorderOnly"
        Title="Signing in"
        d:DesignWidth="360"
        d:DesignHeight="220"
        x:DataType="vm:AuthenticationSplashWindowViewModel">
    <Design.DataContext>
        <vm:AuthenticationSplashWindowViewModel/>
    </Design.DataContext>
    <Border Padding="20" CornerRadius="12" Background="#2F2F33">
        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Loading Dataverse" FontSize="20" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding StatusText}"
                       TextWrapping="Wrap"
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
            <ProgressBar Width="220"
                         IsIndeterminate="True"
                         IsVisible="{Binding IsProgressVisible}"/>
        </StackPanel>
    </Border>
</Window>
